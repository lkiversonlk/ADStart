extends ../layout

block content
    if !is_delegation
        script(typ="text/javascript").
             var config = !{configParam};
        script(src='http://res.wx.qq.com/open/js/jweixin-1.0.0.js')
        div#start_upload.alert.alert-info
            |  #{template.requirement}
        div#confirm_upload.alert.alert-info(style="display:none;text-align:center;font-size:20px")
            span#cancel_upload_btn.glyphicon.glyphicon-remove(style="float:left")
            span
                |  #{user_id} 您准备为ta做一次带盐吗？
            span#confirm_upload_btn.glyphicon.glyphicon-ok(style="float:right")
        form#upload_form(action="/apply", style="display:none")
            input(type="text",name="type", vlaue="apply")
            input(type="text",name="user_id", value="#{user_id}")
            input(type="text", name="template_id", value="#{template.id}")
            input(type="text",name="data", value="")
        script(src='/templates/base.js')


    block template